// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  @@map("admins")
}

model User {
  id               Int      @id @default(autoincrement())
  photoUrl         String?  @map("photo_url")
  telegramLanguage String   @default("en") @map("telegram_language")
  telegramId       String   @unique @map("telegram_id")
  username         String?
  firstName        String   @map("first_name")
  lastName         String?  @map("last_name")
  createdAt        DateTime @default(now()) @map("created_at")
  lastLoginAt      DateTime @default(now()) @map("last_login_at")
  balance          Float    @default(0)
  isPremium        Boolean  @default(false)
  walletAddress    String?  @map("wallet_address")
  ticketCount      Int      @default(0) @map("ticket_count")
  streak           Int      @default(1) @map("streak")
  dailyAvaliable   Boolean  @default(true) @map("daily_avaliable")

  /**
   * Mining
   */
  miningTimeInSeconds Int   @default(10800) @map("mining_time_in_seconds")
  miningProfit        Float @default(1000) @map("profit_per_second")

  invitedUsers     Friend[]   @relation("InviterFriends")
  friend           Friend?    @relation("UserFriend")
  minings          Mining[]
  userTasks        UserTask[]
  userHeroes       UserHero[]
  battlesAsPlayer1 Battle[]   @relation("Player1Battles")
  battlesAsPlayer2 Battle[]   @relation("Player2Battles")
  wonBattles       Battle[]   @relation("WonBattles")

  @@map("users")
}

model Friend {
  id        Int      @id @default(autoincrement())
  inviterId Int      @map("inviter_id")
  userId    Int      @unique @map("user_id")
  earned    Float    @default(0)
  createdOn DateTime @default(now()) @map("created_on")

  // Relations
  inviter User @relation("InviterFriends", fields: [inviterId], references: [id], onDelete: Cascade)
  user    User @relation("UserFriend", fields: [userId], references: [id], onDelete: Cascade)

  @@map("friends")
}

model Mining {
  id         Int       @id @default(autoincrement())
  userId     Int       @map("user_id")
  amount     Float     @default(0)
  startedAt  DateTime  @default(now()) @map("started_at")
  expiresAt  DateTime  @map("expires_at")
  finishedAt DateTime? @map("finished_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("mining")
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  reward    Float
  imageUrl  String   @map("image_url")
  link      String?
  channelId String?  @map("channel_id")
  createdOn DateTime @default(now()) @map("created_on")
  type      TaskType @default(DEFAULT)

  userTasks UserTask[]

  @@map("tasks")
}

model UserTask {
  id        Int        @id @default(autoincrement())
  userId    Int        @map("user_id")
  taskId    Int        @map("task_id")
  status    TaskStatus @default(IN_PROGRESS)
  createdAt DateTime   @default(now()) @map("completed_on")

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, taskId])
  @@map("user_tasks")
}

enum TaskType {
  DEFAULT
  PARTNER
}

enum TaskStatus {
  IN_PROGRESS
  COMPLETED
}

model Hero {
  id        Int      @id @default(autoincrement())
  health    Int
  attack    Int
  name      String   @unique
  imageUrl  String   @map("image_url")
  createdAt DateTime @default(now()) @map("created_at")

  battlesAsPlayer1 Battle[]   @relation("Player1HeroBattles")
  battlesAsPlayer2 Battle[]   @relation("Player2HeroBattles")
  userHeroes       UserHero[]

  @@map("heroes")
}

model UserHero {
  id        Int      @id @default(autoincrement())
  heroId    Int      @map("hero_id")
  userId    Int      @map("user_id")
  createdOn DateTime @default(now()) @map("created_on")

  hero Hero @relation(fields: [heroId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([userId, heroId])
  @@map("user_heroes")
}

enum BattleStatus {
  PENDING
  IN_PROGRESS
  FINISHED
}

model Battle {
  id            Int          @id @default(autoincrement())
  winnerId      Int?         @map("winner_id")
  player1Id     Int?         @map("player1_id")
  player2Id     Int?         @map("player2_id")
  player1HeroId Int?         @map("player1_hero_id")
  player2HeroId Int?         @map("player2_hero_id")
  player1Health Int?         @map("player1_health")
  player2Health Int?         @map("player2_health")
  status        BattleStatus @default(PENDING)
  createdOn     DateTime     @default(now()) @map("created_on")

  winner  User? @relation("WonBattles", fields: [winnerId], references: [id], onDelete: SetNull)
  player1 User? @relation("Player1Battles", fields: [player1Id], references: [id], onDelete: SetNull)
  player2 User? @relation("Player2Battles", fields: [player2Id], references: [id], onDelete: SetNull)

  player1Hero Hero? @relation("Player1HeroBattles", fields: [player1HeroId], references: [id], onDelete: SetNull)
  player2Hero Hero? @relation("Player2HeroBattles", fields: [player2HeroId], references: [id], onDelete: SetNull)

  @@map("battles")
}
